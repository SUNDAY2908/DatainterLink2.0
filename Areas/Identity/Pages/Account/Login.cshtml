@page
@model LoginModel
@{
    ViewData["Title"] = "เข้าสู่ระบบ";

    Layout = null;
}

<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #002366 0%, #0066cc 100%);
        }

        .login-container {
            min-height: 100vh;
        }

        .brand-text {
            color: white;
            position: relative;
            z-index: 1;
        }

        .curved-shape {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 40%;
            background: radial-gradient(circle at bottom right, #0080ff, transparent);
            opacity: 0.3;
            border-radius: 100% 0 0 0;
        }

        .form-control {
            border-radius: 8px;
            padding: 12px;
            border: 1px solid #e0e0e0;
        }

        .btn-login {
            background: #0066cc;
            border: none;
            padding: 12px;
            border-radius: 8px;
        }

            .btn-login:hover {
                background: #0052a3;
            }

        .forgot-password {
            color: #666;
            text-decoration: none;
            font-size: 14px;
        }

        .register {
            color: #666;
            text-decoration: none;
            font-size: 14px;
        }
  
        /* เพิ่ม style สำหรับการจัดกึ่งกลาง */
        .center-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .login-box {
            width: 100%;
            max-width: 1200px;
            margin: auto;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            border-radius: 16px;
            overflow: hidden;
        }
    </style>
</head>
<body>
    <div class="center-wrapper">
        <div class="login-box">
            <div class="row g-0">
                <!-- ส่วนซ้าย - Background และ Logo -->
                <div class="col-lg-6 bg-gradient-primary d-flex align-items-center position-relative" style="min-height: 600px;">
                    <div class="px-5">
                        <h2 class="brand-text mb-3">Presented by</h2>
                        <h1 class="brand-text display-4 fw-bold">Epic Software</h1>
                    </div>
                    <div class="curved-shape"></div>
                </div>

                <!-- ส่วนขวา - Login Form -->
                <div class="col-lg-6 d-flex align-items-center" style="min-height: 600px;">
                    <div class="w-100 px-5">
                        <div class="mb-5">
                            <h2 class="fw-bold mb-1">Data Inter link</h2>
                            <p class="text-muted">Your Instant Email Delivery Solution</p>
                        </div>

                        <div class="mb-4">
                            <h3 class="mb-1">Hello Again!</h3>
                            <p class="text-muted">Welcome back</p>
                        </div>

                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                            <div class="mb-4">
                                <input asp-for="Input.UserName" class="form-control form-control-lg"
                                       placeholder="Your email address" autocomplete="username" aria-required="true" />
                                <span asp-validation-for="Input.UserName" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <input asp-for="Input.Password" class="form-control form-control-lg" type="password"
                                       placeholder="Password" autocomplete="current-password" aria-required="true" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <!-- ปุ่ม login และ Register -->
                            <div class="d-grid gap-3">
                                <button id="login-submit" type="submit" class="btn btn-login btn-lg text-white">
                                    Login
                                </button>
                                <a asp-page="/Account/Register" class="btn btn-secondary btn-lg">Register</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>